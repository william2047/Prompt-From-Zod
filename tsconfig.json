{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022", // Modern JavaScript target
    "module": "NodeNext", // ESM-compatible module system
    "moduleResolution": "NodeNext", // Resolve modules in ESM style
    "rootDir": "./src", // Source directory
    "outDir": "dist", // Output directory
    "declaration": true, // Emit .d.ts files for TypeScript users
    "esModuleInterop": true, // Compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing
    "strict": true, // Enable all strict type-checking options
    "skipDefaultLibCheck": true, // Skip checking default library files
    "skipLibCheck": true // Skip type checking for all .d.ts files
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}